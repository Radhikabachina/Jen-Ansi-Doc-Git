pipeline {
    agent { label 'Java' }
    stages { 
        stage ("Build with Ansible") {
            steps {
                sh "ansible-playbook Install-Depen01.yml"
            }
        }
        stage ("SCM Checkin-1") {
            steps {
                sh "mkdir samplemaven"
                dir("samplemaven") {
                    git branch: 'B1', url: 'https://github.com/Vishwanathms/SampleMaven'
                } 
                sh "mkdir JAGD"
                dir("JAGD") {
                   git branch: 'master', url: 'https://github.com/Vishwanathms/Jen-Ansi-Doc-GIT'
                }
            }
        }
        stage ("maven build") {
            tools {
                maven 'maven-3.6.2'
                jdk 'JDK1.8'
            }
            steps {
                dir("samplemaven") {
                    sh "mvn package"
                }
            }
        }    
        stage ('Installing docker-compose') {
	        input {
                 message 'Mvn Package is Successfull, can I Proceed'
            }
            steps {
                sh "sudo curl -L 'https://github.com/docker/compose/releases/download/1.23.1/docker-compose-$(uname -s)-$(uname -m)' -o /usr/local/bin/docker-compose"
                sh "sudo chmod +x /usr/local/bin/docker-compose"
            }
        }
        stage ('Build Image and run container') {
            steps {
                sh "docker-compose up -d"
            }
        }
        stage ('push it to docker hub') {
            steps {
                sh "docker push vishwacloudlab/tomcatcust01"
            }
        }
    }
}
